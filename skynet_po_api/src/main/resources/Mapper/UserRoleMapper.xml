<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skynet.skynet_po_api.job.dao.UserRoleMapper">

    <resultMap type="com.skynet.skynet_po_api.job.model.UserRole" id="UserRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="customerId" column="customer_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="cTime" column="c_time" jdbcType="TIMESTAMP"/>
        <result property="createrId" column="creater_id" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into twdb.user_role(customer_iduser_idrole_idc_timecreater)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.customerId}#{entity.userId}#{entity.roleId}#{entity.cTime}#{entity.creater})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into twdb.user_role(customer_iduser_idrole_idc_timecreater)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.customerId}#{entity.userId}#{entity.roleId}#{entity.cTime}#{entity.creater})
        </foreach>
        on duplicate key update
customer_id = values(customer_id) user_id = values(user_id) role_id = values(role_id) c_time = values(c_time) creater = values(creater)     </insert>

</mapper>

